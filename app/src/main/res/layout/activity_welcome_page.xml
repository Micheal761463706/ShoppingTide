<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.micheal.shoppingtide.Activity.Welcome_page">


    <android.support.v4.view.ViewPager
        android:id="@+id/welcome_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        app:layout_heightPercent="80%"/>

    <Button
        android:id="@+id/welcome_btnInto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="立即体验"
        android:textSize="20sp"
        android:background="@null"
        app:layout_marginLeftPercent="38%"
        app:layout_marginRightPercent="38%"
        app:layout_marginTopPercent="88%"
        app:layout_marginBottomPercent="5%"
        app:layout_heightPercent="40%" />

</android.support.percent.PercentRelativeLayout>
